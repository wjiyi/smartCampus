/* pages/discovery/discovery.wxss */
@import "../post-item/post-item-tpl.wxss";

.header{
  width:100%;
  height:400rpx;
}

.add_icon{
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  top: 20rpx;
  right: 20rpx;
}

.input-box{
  position: fixed;
  bottom: 0;
  left:0;
  right: 0;
  background-color: #EAE8E8;
  border-top:1rpx solid #D5D5D5;
  height: 100rpx;
  z-index: 1000;
  display: flex;
  flex-direction: row;
}

.input{
    border: 1rpx solid #D5D5D5;
    background-color: #fff;
    border-radius: 3px;
    height: 80rpx;
    width: 390rpx;
    margin:10rpx 25rpx 10rpx 75rpx ;
    font-size: 24rpx;
    color: #838383;
    padding: 0 2%;
}

.submit-btn{
    font-size: 28rpx;
    margin-top: 14rpx;
    margin-right: 18rpx;
    height: 80rpx;
    line-height: 80rpx;
    width: 120rpx;
    
    background-color: #4A6141;
    border-radius:5rpx;
    color: #fff;
    text-align: center;
    
    font-family:Microsoft Yahei;
}