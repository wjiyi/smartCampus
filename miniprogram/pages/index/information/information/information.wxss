/* pages/index/information/information/information.wxss */
.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
}


.swiper-tab-item {
  width: 50%;
  color: #434343;
  font-size: 35rpx;
}

.active {
  color: #f89422;
  border-bottom: 4rpx solid #f2f2f2;
}

.tabs_swiper {
  margin-top: 10px;
  width: 100%;
  height: 100vh;
}

.swiper-container{
  overflow-y: scroll;
}

.activity{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.activity-left{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.avtivity-time{
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;

}

.act-name{
  margin-left: 20rpx;
  height: 200rpx;
  }

.time{
  color: #434343;
  font-size: 30rpx;
}
.tag{
  background-color: #f89422;
  padding-left: 10rpx;
   padding-right: 10rpx;
  border-radius: 10rpx;
}

.add_icon{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 30rpx;
  right: 40rpx;
}

.img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.num{
  color: #434343;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.imageStyle{
  height: 150rpx;
  width: 200rpx;
  margin-left: 80rpx;
  align-self: flex-end;
  
}
