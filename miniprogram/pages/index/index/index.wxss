/**index.wxss**/
.container{
  background-color: #efeff4;
}
swiper{
  width:100%;
  height:400rpx;
 }

swiper image{
  width:100%;
  height:400rpx;
}
.apps{
  width: 100%;
  padding: 0 10rpx;
  margin-top: 10rpx;
}
.row{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.app{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.app image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.app text{
  text-align: center;
  font-size: 28rpx;
}

.hot-title{
  width: 100%;
  margin-top: 20px;
  margin-left: 20rpx;
}

.title-more{
  font-size: 30rpx;
  float: right;
  align-items: center;
  position: relative;
  margin-right: 20rpx;
}

.activity-card{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  
}

.activity{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  border-top: 5rpx #fff solid;
}

.activity-left{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.avtivity-time{
  display: flex;
  flex-direction: row;
  margin-top: 60rpx;
  align-self: flex-end;
}

.act-name{
  margin-left: 20rpx;
  height: 200rpx;
  }

.time{
  color: #434343;
  font-size: 30rpx;
}
.tag{
  background-color: #f89422;
  padding-left: 10rpx;
   padding-right: 10rpx;
  border-radius: 10rpx;
}

.add_icon{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 30rpx;
  right: 40rpx;
}

.line{
  font-size: 20rpx;
  margin-top: 10rpx;
}

.img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.num{
  color: #434343;
  font-size: 30rpx;
  margin-left: 20rpx;
}

.imageStyle{
  height: 150rpx;
  width: 200rpx;
  margin-left: 80rpx;
  align-self: flex-end;
}







