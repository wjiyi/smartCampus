/**index.wxss**/
swiper{
  width:100%;
  height:400rpx;
 }

swiper image{
  width:100%;
  height:400rpx;
}
.apps{
  width: 100%;
  padding: 0 10rpx;
  margin-top: 10rpx;
}
.row{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.app{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.app image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.app text{
  text-align: center;
  font-size: 28rpx;
}

.hot-title{
  width: 100%;
  margin-top: 20px;
  margin-left: 20rpx;
}

.title-more{
  font-size: 30rpx;
  float: right;
  align-items: center;
  position: relative;
  margin-right: 20rpx;
}

.activity{
  display:flex;
  flex-direction: row; 
}

.act-title{
  display: flex;
  flex-direction: column;
}



