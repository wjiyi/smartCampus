/**index.wxss**/
swiper{
  width:100%;
  height:400rpx;
 }

swiper image{
  width:100%;
  height:400rpx;
}
.apps{
  width: 100%;
  padding: 0 10rpx;
  margin-top: 10rpx;
}
.row{
  width: 100%;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  margin-top: 10rpx;
}

.app{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
}
.app image{
  width: 128rpx;
  height: 100rpx;
}
.app text{
  text-align: center;
  font-size: 28rpx;
}

.hot-title{
  width: 100%;
  margin-top: 20rpx;
}

.activity{
  position: relative;
  width: 100%;
  height: 160rpx;
  margin-top: 10rpx;
}
.activity image{
  width: 100%;
  height: 100%;
}
.activity .act-content{
  position: absolute;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
}



