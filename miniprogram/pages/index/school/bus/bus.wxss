/* pages/index/school/bus/bus.wxss */
.bus-container{
  background-color: #efeff4;
  width: 100%;
  height: 100%;
  min-height: 100vh;
}
.bus{
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding: 15rpx;
  margin-top: 20rpx;
}

.bus-name{
  background-color: #f89422;
  border: 1rpx #f89422 solid;
  border-radius: 15rpx;
  width: 135rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bus-time{
  display: flex;
  flex-direction: row;
}

.name{
  font-weight: bold;
  
}