/* pages/help/help.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
}

.swiper-tab-item {
  width: 30%;
  color: #434343;
  font-size: 35rpx;
}

.active {
  color: #f89422;
  border-bottom: 4rpx solid #f2f2f2;
}

.add_icon {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  bottom: 30rpx;
  right: 40rpx;
  z-index: 100;
}

.tabs_swiper {
  margin-top: 10px;
  width: 100%;
  height: 100vh;
}

.swiper-container{
  overflow-y: scroll;
}

.discovery-container{
  width: auto;
  margin-top: 10rpx;
  height: auto;
}
.discovery-title {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
}

.discovery-avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}

.name-container{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.discovery-time{
  color: #8d8d8d;
  font-size: 20rpx;
  margin-top: 15rpx;
}

.discovery-content{
  margin-top: 10rpx;
  margin-left: 20rpx;
}

.conten-text{
  display: block;
}

.content-image{
  margin-top:10rpx;
  display: block;
}

.discovery-operation{
  display: flex;
  flex-direction: row;
  height: 70rpx;
  margin-top: 20rpx;
  border: 1px #dadada solid;
}

.comment{
  display: flex;
  flex-direction: row;
  flex: 1;
  border-right: 1px #dadada solid;
  justify-content: center;
  align-items: center;
}

.comment-img{
  width: 50rpx;
  height: 50rpx;
  margin-left: 10rpx;
}

.comment-text{
  margin-left: 15rpx;
}

.like{
  display: flex;
  flex-direction: row;
  flex: 1;
  justify-content: center;
  align-items: center;
}