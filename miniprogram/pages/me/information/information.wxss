/* pages/information/information.wxss */
.inf-image{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-top: 10rpx;
  background-color: #f2f2f2;
  border: 1px #f2f2f2 solid;
  align-items: center;
  justify-content: center;
}

.inf-text{
  width: 100rpx;
  margin-left: 10px;
}

.avatar{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 100%;
  align-items: center;
  margin-right: 10px;
}


.inf-avatar{
  width: 100rpx;
  height: 100rpx;
  margin: 0 20rpx;
  border-radius: 50rpx;
  padding: 10rpx;
}